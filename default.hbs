<!DOCTYPE html>
<html lang="{{@site.locale}}">
	<head>
		{{! Document Settings }}
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
		{{! Page Meta }}
		<title>{{meta_title}}</title>
		{{! Styles'n'Scripts }}
		<style id="bundle-css">
            {{> bundle-css}}
        </style>
		<script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
		<link rel="stylesheet" href="{{asset "ghost-dropdown.css"}}">
		{{! Ghost outputs important style and meta data with this tag }}
		{{ghost_head}}
	</head>
	<body class="{{body_class}}">
		{{! insert header partial}}
		{{> header}}
		{{{body}}}
		{{! insert footer partial}}
		{{> footer}}
		{{! scripts}}
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		<script>var searchApi = "{{@site.url}}/ghost/api/v4/content/posts/?key={{>api_key}}&limit=all&fields=id,title,excerpt,custom_excerpt,url,published_at&formats=plaintext";</script>
		<script src="{{asset "js/app.bundle.min.js"}}"></script>
		<script src="{{asset "ghost-dropdown.js"}}"></script>
        {{ghost_foot}}
	</body>
</html>