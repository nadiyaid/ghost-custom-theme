{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="main-content-area">
    <div class="container">
        <div class="row">
            <div class="col">
                {{#post}}
                <div class="single-post-wrap {{^if feature_image}}no-image{{/if}}">
                    <div class="post-image" {{#if feature_image}} style="background-image: url({{feature_image}});"{{/if}}>
                        <div class="content-wrap">
                            {{#if tags}}
                            <div class="tag-wrap">
                                {{tags separator=""}}
                            </div>
                            {{/if}}
                            <h1 class="title">
                                {{title}}
                            </h1>
                        </div>
                    </div>
                    <div class="single-post-content m-auto">
                        {{#if access}}
                        {{content}}
                        {{else}}
                        {{{html}}}
                        <div class="no-access-message">
                            {{t "You don't have access to this post on"}} <strong>{{@site.title}}</strong> {{t "at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access."}}
                        </div>
                        <div class="post-upgrade-cta-box text-center">
                            {{#if @member}}
                            <h2 class=" cta-title">{{t "This post is for paying subscribers only"}}</h2>
                            {{else}}
                            <h2 class=" cta-title">{{t "This post is for subscribers only"}}</h2>
                            {{/if}}
                            <a class="btn btn-secondary btn-cta" href="{{@site.url}}/signup/">{{t "Subscribe now"}}</a>
                            <p class="sign-in-cta"><small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small></p>
                        </div>
                        {{/if}}
                    </div>
                    {{> prev-next}}
                </div>
                {{/post}}
            </div>
        </div>
        <div class="container px-4">
            <div class="row row-cols-1 row-cols-md-2 py-5 justify-content-center align-items-center">
                <div class="col col-md-12 col-xl-6 col-xxl-4">
                    <h1 class="mb-3 text-capitalize fw-bold text-sm-start text-xl-start">Grow with our <br> amazing products</h1>
                </div>
                <div class="col col-xl-3 col-xxl-2 col-md-5 text-sm-center text-xl-start">
                    <button onclick="location.href='/contact/'"
                                    class="btn btn-primary text-capitalize mb-2 mb-lg-0 mr-3">get in touch</button>
                </div>
            </div>
        </div>
    </div>
</div>