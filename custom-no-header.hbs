{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="main-content-area">
    <div class="container">
        <div class="row">
            <div class="col">
                {{#post}}
                <div class="single-post-wrap">
                    <div class="single-post-content m-auto">
                        <div class="col-7 p-0">
                            <h1 class="title" style="color:#ED3237;">
                                {{title}}
                            </h1>
                        </div>
                        {{content}}
                    </div>
                </div>
                {{/post}}
            </div>
        </div>
    </div>
</div>